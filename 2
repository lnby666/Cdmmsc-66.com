            const moduleMap = {
                home: renderHome,
                order: renderOrder,
                warehouse: renderWarehouse,
                transport: renderTransportFull,
                customs: renderCustomsFull,
                finance: renderFinanceFull,
                decision: renderDecisionFull,
                service: renderServiceFull
            };

            function setActiveMenu(moduleId) {
                menuItems.forEach(item => {
                    const mod = item.getAttribute('data-module');
                    if (mod === moduleId) {
                        item.classList.add('active');
                    } else {
                        item.classList.remove('active');
                    }
                });
            }

            function renderModule(moduleId) {
                const renderFn = moduleMap[moduleId] || moduleMap['home'];
                contentDiv.innerHTML = renderFn();
            }

            menuItems.forEach(item => {
                item.addEventListener('click', (e) => {
                    const moduleId = item.getAttribute('data-module');
                    setActiveMenu(moduleId);
                    renderModule(moduleId);
                });
            });

            // åˆå§‹æ¿€æ´»é¦–é¡µ
            setActiveMenu('home');
            renderModule('home');
        })();
    </script>
